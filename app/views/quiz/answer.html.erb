

<h1>Question <%= @current + 1 %> of <%= @total %></h1>
<p id="question"><%= @question.text %></p>

<div id="feedback-choices">
  <% @choices.each do |choice| %>
	 <% if choice.correct %>
		<p class="correct feedback-choice">
	 <% elsif choice == @choice %>
		<p class="incorrect feedback-choice">
	 <% else %>
		<p class="feedback-choice">
	 <% end %>
		<%= choice.text %>
	 </p>
  <% end %>
</div>

<p class="feedback">
  <% if @correct %>
	<p class="alert alert-success"> Correct! </p>
  <% else %>
	 <p class="alert alert-danger"> Incorrect. </p>
	  <% @choices.each do |choice| %>
                      
	<% if choice.correct %>
	<%= choice.text %>
	Is The Correct Answer!
	<% else %>
			<% choice.correct %>
	<%end %>

  <% end %>
<% end %>
</p>

<%= form_tag({:controller => "quiz", :action => "question"}) do %>
  <div class="center">
	 <%= submit_tag("Continue", :class => "submit") %>
  </div>
<% end %>

<% content_for(:title) do %>
  Question <%= @current + 1 %> of <%= @total %>
<% end %>