<link rel="stylesheet" href="//railsgirls.com/assets/bootstrap-theme.css">

</head>
<body>
  <h1 style="text-align:center;font-family: monotype corsiva;">Welcome to Conscientia!!</h1>
   
	<!-- devise login controls -->
